---
const {title, description} = Astro.props;

---

<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />
        <title>{title ?? 'Blog'}</title>
        <meta name="description" content={description}/>
        <link rel="sitemap" href="/sitemap-index.xml" />
    </head>
    <style></style>
    <body class=`min-h-[100vh] flex flex-col justify-between
                bg-dark-1 text-white`>
        <header>
            <nav class="flex justify-between py-4 w-[95%] mx-auto max-w-[1400px]">
                <a href="/">Logo</a>
                <ul class="flex gap-4">
                    <li><a href="/">posts</a></li>
                    <!-- <li><a href="/">privacy policy</a></li>
                    <li><a href="/">author</a></li> -->
                </ul>
            </nav>
        </header>
        <slot>No content is available</slot>
        <script>
            const startDate = 2023;
            const endDate = new Date().getFullYear();
            const footerDate = `${startDate}${endDate !== startDate ? '-'+endDate : ''}`
            document.querySelector('#footerDate').textContent = footerDate;
        </script>
        <footer class="py-3 text-center">
            Copyright &copy; â€” <span id="footerDate"></span>
        </footer>
    </body>
</html>